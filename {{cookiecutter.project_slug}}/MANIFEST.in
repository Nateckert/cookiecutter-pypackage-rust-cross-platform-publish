{% if cookiecutter.create_author_file == 'y' %}
include AUTHORS.rst
{% endif %}
include CONTRIBUTING.rst
include HISTORY.rst
include LICENSE
include README.rst

recursive-include tests/ *.py
recursive-exclude * __pycache__
recursive-exclude * *.py[co]

recursive-include docs *.rst conf.py Makefile make.bat *.jpg *.png *.gif

# we only want "release" artifacts, not "debug" artifacts
recursive-include {{cookiecutter.project_slug}}/rust/target/release/ *.so *.dylib *.dll *.lib  
recursive-include {{cookiecutter.project_slug}} *.h *.c

# inclusing the .rs and .toml files isn't necessary so feel free to remove them. 
# This may help if a source dist is needed.
#recursive-include {{cookiecutter.project_slug}} *.rs *.toml 